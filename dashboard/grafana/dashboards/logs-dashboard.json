{
  "uid": "logs-dashboard",
  "title": "Metro Logs Dashboard",
  "tags": ["metro", "logs", "loki", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Total Log Entries",
      "gridPos": {"w": 6, "h": 4, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "fixed", "fixedColor": "blue"}
        }
      },
      "targets": [
        {
          "expr": "sum(count_over_time({service_name=~\".+\"}[1h]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ]
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Error Log Count",
      "gridPos": {"w": 6, "h": 4, "x": 6, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 10},
              {"color": "red", "value": 50}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "sum(count_over_time({service_name=~\".+\"} |~ \"(?i)(error|exception|fail)\" [1h]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ]
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Warning Log Count",
      "gridPos": {"w": 6, "h": 4, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 20},
              {"color": "orange", "value": 100}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "sum(count_over_time({service_name=~\".+\"} |~ \"(?i)(warn|warning)\" [1h]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ]
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Active Services Logging",
      "gridPos": {"w": 6, "h": 4, "x": 18, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "fixed", "fixedColor": "green"}
        }
      },
      "targets": [
        {
          "expr": "count by () (count by (service_name) (count_over_time({service_name=~\".+\"}[5m])))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ]
    },
    {
      "id": 5,
      "type": "logs",
      "title": "Recent Error Logs",
      "gridPos": {"w": 24, "h": 8, "x": 0, "y": 4},
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "targets": [
        {
          "expr": "{service_name=~\".+\"} |~ \"(?i)(error|exception|fail)\"",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Log Volume by Service",
      "gridPos": {"w": 12, "h": 8, "x": 0, "y": 12},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "line", "lineInterpolation": "linear"}
        }
      },
      "targets": [
        {
          "expr": "sum by (service_name) (count_over_time({service_name=~\".+\"}[5m]))",
          "refId": "A",
          "datasource": {
            "type": "loki", 
            "uid": "loki"
          },
          "legendFormat": "{{service_name}}"
        }
      ]
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Error Rate by Service",
      "gridPos": {"w": 12, "h": 8, "x": 12, "y": 12},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "line", "lineInterpolation": "linear"},
          "unit": "short"
        }
      },
      "targets": [
        {
          "expr": "sum by (service_name) (count_over_time({service_name=~\".+\"} |~ \"(?i)(error|exception|fail)\" [5m]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          },
          "legendFormat": "{{service_name}}"
        }
      ]
    },
    {
      "id": 8,
      "type": "logs",
      "title": "All Service Logs",
      "gridPos": {"w": 24, "h": 10, "x": 0, "y": 20},
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "targets": [
        {
          "expr": "{service_name=~\".+\"}",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ]
    }
  ]
}
