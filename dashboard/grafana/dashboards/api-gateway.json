{
  "uid": "api-gateway",
  "title": "Metro API Gateway Dashboard",
  "tags": ["metro", "api-gateway", "performance"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Gateway Status",
      "gridPos": {"w": 4, "h": 4, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "DOWN"}}, "type": "value"},
            {"options": {"1": {"text": "UP"}}, "type": "value"}
          ]
        }
      },
      "targets": [
        {
          "expr": "up{job=\"api-gateway\"}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Requests/sec",
      "gridPos": {"w": 4, "h": 4, "x": 4, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "fixed", "fixedColor": "blue"},
          "unit": "reqps"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"api-gateway\"}[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Avg Response Time",
      "gridPos": {"w": 4, "h": 4, "x": 8, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "unit": "ms",
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 200},
              {"color": "red", "value": 500}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "avg(http_request_duration_seconds{job=\"api-gateway\"}) * 1000",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Error Rate %",
      "gridPos": {"w": 4, "h": 4, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "unit": "percent",
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"api-gateway\",status=~\"5..\"}[5m]) / rate(http_requests_total{job=\"api-gateway\"}[5m]) * 100",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Active Connections",
      "gridPos": {"w": 4, "h": 4, "x": 16, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "fixed", "fixedColor": "purple"}
        }
      },
      "targets": [
        {
          "expr": "http_server_connections_active{job=\"api-gateway\"}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "type": "stat",
      "title": "Memory Usage",
      "gridPos": {"w": 4, "h": 4, "x": 20, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "unit": "bytes",
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 536870912},
              {"color": "red", "value": 1073741824}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"api-gateway\"}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Request Rate Over Time",
      "gridPos": {"w": 12, "h": 8, "x": 0, "y": 4},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "reqps"
        }
      },
      "targets": [
        {
          "expr": "sum by (method) (rate(http_requests_total{job=\"api-gateway\"}[5m]))",
          "refId": "A",
          "legendFormat": "{{method}}"
        }
      ]
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Response Time Percentiles",
      "gridPos": {"w": 12, "h": 8, "x": 12, "y": 4},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "ms"
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum by (le) (rate(http_request_duration_seconds_bucket{job=\"api-gateway\"}[5m]))) * 1000",
          "refId": "A",
          "legendFormat": "P50"
        },
        {
          "expr": "histogram_quantile(0.90, sum by (le) (rate(http_request_duration_seconds_bucket{job=\"api-gateway\"}[5m]))) * 1000",
          "refId": "B",
          "legendFormat": "P90"
        },
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket{job=\"api-gateway\"}[5m]))) * 1000",
          "refId": "C",
          "legendFormat": "P95"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(http_request_duration_seconds_bucket{job=\"api-gateway\"}[5m]))) * 1000",
          "refId": "D",
          "legendFormat": "P99"
        }
      ]
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "HTTP Status Codes",
      "gridPos": {"w": 12, "h": 8, "x": 0, "y": 12},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      },
      "targets": [
        {
          "expr": "sum by (status) (rate(http_requests_total{job=\"api-gateway\"}[5m]))",
          "refId": "A",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "id": 10,
      "type": "timeseries",
      "title": "Top Endpoints by Traffic",
      "gridPos": {"w": 12, "h": 8, "x": 12, "y": 12},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "reqps"
        }
      },
      "targets": [
        {
          "expr": "topk(10, sum by (endpoint) (rate(http_requests_total{job=\"api-gateway\"}[5m])))",
          "refId": "A",
          "legendFormat": "{{endpoint}}"
        }
      ]
    }
  ]
}
