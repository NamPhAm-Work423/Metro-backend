{
  "uid": "service-health",
  "title": "Metro Services Health Dashboard",
  "tags": ["metro", "health", "services"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Services Up",
      "gridPos": {"w": 6, "h": 4, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 8},
              {"color": "green", "value": 10}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "sum(up{job=~\"api-gateway|auth-service|user-service|transport-service|ticket-service|public-service|payment-service|report-service|notification-service|control-service\"})",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Total Services",
      "gridPos": {"w": 6, "h": 4, "x": 6, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "fixed", "fixedColor": "blue"}
        }
      },
      "targets": [
        {
          "expr": "count(up{job=~\"api-gateway|auth-service|user-service|transport-service|ticket-service|public-service|payment-service|report-service|notification-service|control-service\"})",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Avg Response Time",
      "gridPos": {"w": 6, "h": 4, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 500},
              {"color": "red", "value": 1000}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "avg(http_request_duration_seconds{job=~\"api-gateway|auth-service|user-service|transport-service|ticket-service|public-service|payment-service\"})*1000",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Error Rate %",
      "gridPos": {"w": 6, "h": 4, "x": 18, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "avg(rate(http_requests_total{status=~\"5..\"}[5m])) / avg(rate(http_requests_total[5m])) * 100",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Service Health Over Time",
      "gridPos": {"w": 12, "h": 8, "x": 0, "y": 4},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "line", "lineInterpolation": "linear"},
          "min": 0,
          "max": 1
        }
      },
      "targets": [
        {
          "expr": "up{job=~\"api-gateway|auth-service|user-service|transport-service|ticket-service|public-service|payment-service|report-service|notification-service|control-service\"}",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Request Rate by Service",
      "gridPos": {"w": 12, "h": 8, "x": 12, "y": 4},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "line", "lineInterpolation": "linear"},
          "unit": "reqps"
        }
      },
      "targets": [
        {
          "expr": "sum by (job) (rate(http_requests_total[5m]))",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ]
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Response Time P95 by Service",
      "gridPos": {"w": 12, "h": 8, "x": 0, "y": 12},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "line", "lineInterpolation": "linear"},
          "unit": "ms"
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (job, le) (rate(http_request_duration_seconds_bucket[5m]))) * 1000",
          "refId": "A",
          "legendFormat": "{{job}} P95"
        }
      ]
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "CPU Usage by Service",
      "gridPos": {"w": 12, "h": 8, "x": 12, "y": 12},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "line", "lineInterpolation": "linear"},
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "targets": [
        {
          "expr": "avg by (job) (process_cpu_seconds_total{job=~\"api-gateway|auth-service|user-service|transport-service|ticket-service|public-service|payment-service|report-service|notification-service|control-service\"}) * 100",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ]
    }
  ]
}
