{
  "uid": "infrastructure",
  "title": "Metro Infrastructure Dashboard", 
  "tags": ["metro", "infrastructure", "kafka", "redis", "postgres"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Kafka Brokers Up",
      "gridPos": {"w": 4, "h": 4, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 2},
              {"color": "green", "value": 3}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "sum(up{job=\"kafka\"})",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Redis Status",
      "gridPos": {"w": 4, "h": 4, "x": 4, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "up{job=\"redis\"}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "type": "stat",
      "title": "PostgreSQL Status",
      "gridPos": {"w": 4, "h": 4, "x": 8, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "up{job=\"postgres\"}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "type": "stat",
      "title": "MongoDB Status",
      "gridPos": {"w": 4, "h": 4, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "up{job=\"mongodb\"}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Kafka Message Throughput",
      "gridPos": {"w": 12, "h": 8, "x": 0, "y": 4},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "msgs"
        }
      },
      "targets": [
        {
          "expr": "sum by (topic) (kafka_topic_partition_current_offset)",
          "refId": "A",
          "legendFormat": "{{topic}}"
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Redis Memory Usage",
      "gridPos": {"w": 12, "h": 8, "x": 12, "y": 4},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "bytes"
        }
      },
      "targets": [
        {
          "expr": "redis_memory_used_bytes",
          "refId": "A",
          "legendFormat": "Used Memory"
        },
        {
          "expr": "redis_memory_max_bytes",
          "refId": "B", 
          "legendFormat": "Max Memory"
        }
      ]
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "PostgreSQL Connections",
      "gridPos": {"w": 12, "h": 8, "x": 0, "y": 12},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      },
      "targets": [
        {
          "expr": "pg_stat_database_numbackends",
          "refId": "A",
          "legendFormat": "{{datname}}"
        }
      ]
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Database Query Performance",
      "gridPos": {"w": 12, "h": 8, "x": 12, "y": 12},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "ms"
        }
      },
      "targets": [
        {
          "expr": "avg(pg_stat_database_blk_read_time / pg_stat_database_blks_read)",
          "refId": "A",
          "legendFormat": "Avg Read Time"
        },
        {
          "expr": "avg(pg_stat_database_blk_write_time / pg_stat_database_blks_written)",
          "refId": "B",
          "legendFormat": "Avg Write Time"
        }
      ]
    }
  ]
}
