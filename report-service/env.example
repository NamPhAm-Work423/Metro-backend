# Application Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=8007
RELOAD=false

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=report_db
DB_USER=report_service
DB_PASSWORD=1

# KAFKA
KAFKA_BROKERS=kafka-1:19092,kafka-2:19093,kafka-3:19094
KAFKA_CLIENT_ID=report-service
KAFKA_BROKERS_INTERNAL=kafka-1:19092,kafka-2:19093,kafka-3:19094
KAFKA_GROUP_ID=report-service

# Event Topics (align with other services)
USER_CREATED_TOPIC=user.created
USER_LOGIN_TOPIC=user.login
TICKET_CREATED_TOPIC=ticket.created
TICKET_ACTIVATED_TOPIC=ticket.activated
TICKET_CANCELLED_TOPIC=ticket.cancelled
TICKET_USED_TOPIC=ticket.used

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/application.log

# SQLAlchemy Logging
# Set to true to print SQL statements (DDL/DML). Default false to keep logs quiet.
SQL_ECHO=false

# Security Configuration
SERVICE_JWT_SECRET=your-service-jwt-secret
# Backward-compat alias (optional)
SERVICE_AUTH_SECRET=
SERVICE_AUTH_ISSUER=api-gateway
SERVICE_AUTH_AUDIENCE=internal-services

# Report Configuration
REPORTS_DIR=reports
MAX_REPORT_SIZE=10MB
REPORT_RETENTION_DAYS=30