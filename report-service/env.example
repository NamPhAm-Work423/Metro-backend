# Application Configuration
NODE_ENV=production
PORT=8007

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=report_db
DB_USER=report_service
DB_PASSWORD=${REPORT_DB_PASSWORD}

# KAFKA
KAFKA_BROKERS=kafka-1:19092,kafka-2:19093,kafka-3:19094
KAFKA_CLIENT_ID=report-service
KAFKA_BROKERS_INTERNAL=kafka-1:19092,kafka-2:19093,kafka-3:19094
KAFKA_GROUP_ID=report-service

# Event Topics
USER_CREATED_TOPIC=user.created
USER_LOGIN_TOPIC=user.login
TICKET_CREATED_TOPIC=ticket.created
TICKET_ACTIVATED_TOPIC=ticket.activated
TICKET_CANCELLED_TOPIC=ticket.cancelled
TICKET_USED_TOPIC=ticket.used

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/application.log
SQL_ECHO=false

# Security Configuration
SERVICE_JWT_SECRET=CHANGE_ME

# Report Configuration
REPORTS_DIR=reports
MAX_REPORT_SIZE=10MB
REPORT_RETENTION_DAYS=30

# CORS
# Public API gateway origin (prod)
API_GATEWAY_ORIGIN=https://api.metrohcm.io.vn
# Additional allowed origins, comma-separated
ALLOWED_ORIGINS=https://api.metrohcm.io.vn

