NODE_ENV=production
PORT=8008

# Service JWT
SERVICE_JWT_SECRET=CHANGE_ME

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=control_db
DB_USER=control_service
DB_PASSWORD=${CONTROL_DB_PASSWORD}

# Control Service gRPC endpoint
CONTROL_GRPC_HOST=control-service
CONTROL_GRPC_PORT=50053

# Transport Service gRPC endpoint
TRANSPORT_GRPC_HOST=transport-service
TRANSPORT_GRPC_PORT=50051

# Default scheduling rules
DEFAULT_PEAK_HEADWAY_SEC=360
DEFAULT_OFFPEAK_HEADWAY_SEC=600
DEFAULT_DWELL_SEC=40
DEFAULT_DWELL_BIG_STATION_SEC=75
DEFAULT_TURNAROUND_SEC=600

# Kafka
KAFKA_BROKERS=kafka-1:19092,kafka-2:19093,kafka-3:19094
KAFKA_CLIENT_ID=control-service
KAFKA_BROKERS_INTERNAL=kafka-1:19092,kafka-2:19093,kafka-3:19094


# CORS
# Public API gateway origin (prod)
API_GATEWAY_ORIGIN=https://api.metrohcm.io.vn
# Additional allowed origins, comma-separated
ALLOWED_ORIGINS=https://api.metrohcm.io.vn

# OpenTelemetry Tracing Configuration
SERVICE_NAME=control-service
SERVICE_VERSION=1.0.0
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
OTEL_TRACES_SAMPLER=traceidratio
OTEL_TRACES_SAMPLER_ARG=1.0