NODE_ENV=production
PORT=8006

# Service JWT
SERVICE_JWT_SECRET=CHANGE_ME

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=payment_db
DB_USER=payment_service
DB_PASSWORD=${PAYMENT_DB_PASSWORD}

# PayPal
PAYPAL_CLIENT_ID=CHANGE_ME
PAYPAL_SECRET=CHANGE_ME

# Transport gRPC
TRANSPORT_GRPC_HOST=transport-service
TRANSPORT_GRPC_PORT=50051

# Kafka
KAFKA_BROKERS=kafka-1:19092,kafka-2:19093,kafka-3:19094
KAFKA_CLIENT_ID=payment-service
KAFKA_BROKERS_INTERNAL=kafka-1:19092,kafka-2:19093,kafka-3:19094


# CORS
# Public API gateway origin (prod)
API_GATEWAY_ORIGIN=https://api.metrohcm.io.vn
# Additional allowed origins, comma-separated
ALLOWED_ORIGINS=https://api.metrohcm.io.vn
