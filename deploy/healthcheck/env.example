PORT=3000
NODE_ENV=production

# Email configuration (set via secrets)
# Choose ONE of the following blocks (uncomment and set values)

# Gmail (STARTTLS)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=starttls

# Gmail (SSL)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=465
# EMAIL_SECURE=ssl

# Local SMTP (no auth, e.g., MailHog)
# EMAIL_HOST=mailhog
# EMAIL_PORT=1025
# EMAIL_SECURE=false

# Credentials (leave empty if your SMTP doesn't require AUTH)
EMAIL_USER=
EMAIL_PASS=

EMAIL_FROM_NAME=Metro System
EMAIL_FROM=alerts@example.com
ADMIN_EMAIL=alerts@example.com

# Optional: public base URL for confirm links. If unset, auto-detected via proxy headers
# HOST_URL=https://alerts.example.com

