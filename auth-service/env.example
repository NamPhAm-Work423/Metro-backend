NODE_ENV=production
PORT=8001

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=auth_db
DB_USER=auth_service
DB_PASSWORD=${AUTH_DB_PASSWORD}

# JWT (SET VIA SECRET MANAGER IN PROD)
JWT_ACCESS_SECRET=CHANGE_ME
JWT_REFRESH_SECRET=CHANGE_ME
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
SERVICE_JWT_SECRET=CHANGE_ME
DEFAULT_ADMIN_USER_ID=00000000-0000-0000-0000-000000000001

# API KEY
API_KEY_HASH_SECRET=CHANGE_ME
NEED_API_KEY=true

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD:-}
REDIS_KEY_PREFIX=${REDIS_KEY_PREFIX:-auth-service:}

# Kafka
KAFKA_BROKERS=kafka-1:19092,kafka-2:19093,kafka-3:19094
KAFKA_CLIENT_ID=auth-service
KAFKA_BROKERS_INTERNAL=kafka-1:19092,kafka-2:19093,kafka-3:19094
KAFKA_GROUP_ID=auth-service
USER_CREATED_TOPIC=user.created
USER_DELETED_TOPIC=user.deleted
PASSENGER_DELETED_TOPIC=passenger.deleted
STAFF_DELETED_TOPIC=staff.deleted
USER_LOGIN_TOPIC=user.login

# Email (configure via secret manager)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM_NAME=Metro System
EMAIL_FROM=noreply@example.com

