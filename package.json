{
  "name": "metro-backend",
  "version": "1.0.0",
  "description": "Metro transportation system backend microservices",
  "main": "start-services.js",
  "scripts": {
    "start": "node start-services.js",
    "start:dev": "npm run start",
    "install:all": "npm install && cd api-gateway && npm install && cd ../passenger-service && npm install",
    "test": "npm run test:api-gateway && npm run test:passenger-service",
    "test:api-gateway": "cd api-gateway && npm test",
    "test:passenger-service": "cd passenger-service && npm test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "rm -rf node_modules api-gateway/node_modules passenger-service/node_modules"
  },
  "workspaces": [
    "api-gateway",
    "passenger-service"
  ],
  "devDependencies": {
    "axios": "^1.7.9",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/metro-backend.git"
  },
  "keywords": [
    "microservices",
    "api-gateway",
    "passenger-service",
    "metro",
    "transportation",
    "nodejs",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
} 