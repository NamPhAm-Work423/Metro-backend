NODE_ENV=production
PORT=8004

# Service JWT
SERVICE_JWT_SECRET=CHANGE_ME

# Ticket QR Code Secret
TICKET_QR_SECRET=${TICKET_QR_SECRET}

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ticket_db
DB_USER=ticket_service
DB_PASSWORD=${TICKET_DB_PASSWORD}

# Ticket Service gRPC Configuration
TICKET_GRPC_URL=ticket-service:50052
TRANSPORT_GRPC_HOST=ticket-service
TICKET_GRPC_PORT=50052

# Transport Service gRPC
TRANSPORT_GRPC_URL=transport-service:50051
TRANSPORT_GRPC_HOST=transport-service
TRANSPORT_GRPC_PORT=50051

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_USER=
REDIS_PASSWORD=${REDIS_PASSWORD:-}
REDIS_KEY_PREFIX=${REDIS_KEY_PREFIX:-service:}

# Redis Cache Keys
REDIS_USER_CACHE_KEY_PREFIX=metrohcm:

# Kafka
KAFKA_BROKERS=kafka-1:19092,kafka-2:19093,kafka-3:19094
KAFKA_CLIENT_ID=ticket-service
KAFKA_BROKERS_INTERNAL=kafka-1:19092,kafka-2:19093,kafka-3:19094


# CORS
# Public API gateway origin (prod)
API_GATEWAY_ORIGIN=https://api.metrohcm.io.vn
# Additional allowed origins, comma-separated
ALLOWED_ORIGINS=https://api.metrohcm.io.vn

# OpenTelemetry Tracing Configuration
SERVICE_NAME=ticket-service
SERVICE_VERSION=1.0.0
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
OTEL_TRACES_SAMPLER=traceidratio
OTEL_TRACES_SAMPLER_ARG=1.0
