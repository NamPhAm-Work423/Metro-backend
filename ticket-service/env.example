NODE_ENV=production
PORT=8004

# Service JWT
SERVICE_JWT_SECRET=CHANGE_ME

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ticket_db
DB_USER=ticket_service
DB_PASSWORD=${TICKET_DB_PASSWORD}

# gRPC Configuration
TICKET_GRPC_URL=ticket-service:50052
FARE_GRPC_PORT=50052

# Transport Service gRPC
TRANSPORT_GRPC_URL=transport-service:50051
TRANSPORT_GRPC_HOST=transport-service
TRANSPORT_GRPC_PORT=50051

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD:-}
REDIS_KEY_PREFIX=${REDIS_KEY_PREFIX:-service:}

# Kafka
KAFKA_BROKERS=kafka-1:19092,kafka-2:19093,kafka-3:19094
KAFKA_CLIENT_ID=ticket-service
KAFKA_BROKERS_INTERNAL=kafka-1:19092,kafka-2:19093,kafka-3:19094


# CORS
# Public API gateway origin (prod)
API_GATEWAY_ORIGIN=https://api.metrohcm.io.vn
# Additional allowed origins, comma-separated
ALLOWED_ORIGINS=https://api.metrohcm.io.vn
