NODE_ENV=production
PORT=8002

# Service JWT
SERVICE_JWT_SECRET=CHANGE_ME
DEFAULT_ADMIN_USER_ID=00000000-0000-0000-0000-000000000001
ADMIN_PASSENGER_ID=00000000-0000-4000-8000-000000000001

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=user_db
DB_USER=user_service
DB_PASSWORD=${USER_DB_PASSWORD}

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD:-}
REDIS_KEY_PREFIX=${REDIS_KEY_PREFIX:-service:}

# Redis Cache Keys  
REDIS_USER_CACHE_KEY_PREFIX=metrohcm:

# Kafka
KAFKA_BROKERS=kafka-1:19092,kafka-2:19093,kafka-3:19094
KAFKA_CLIENT_ID=user-service
KAFKA_BROKERS_INTERNAL=kafka-1:19092,kafka-2:19093,kafka-3:19094
KAFKA_GROUP_ID=user-service-group
USER_CREATED_TOPIC=user.created
USER_DELETED_TOPIC=user.deleted
PASSENGER_DELETED_TOPIC=passenger.deleted
STAFF_DELETED_TOPIC=staff.deleted
USER_LOGIN_TOPIC=user.login


# CORS
# Public API gateway origin (prod)
API_GATEWAY_ORIGIN=*
# Additional allowed origins, comma-separated
ALLOWED_ORIGINS=*

# gRPC
USER_GRPC_PORT=50054

# OpenTelemetry Tracing Configuration
SERVICE_NAME=user-service
SERVICE_VERSION=1.0.0
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
OTEL_TRACES_SAMPLER=traceidratio
OTEL_TRACES_SAMPLER_ARG=1.0