NODE_ENV=production
PORT=8000

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=gateway_db
DB_USER=gateway_service
DB_PASSWORD=${GATEWAY_DB_PASSWORD}

# JWT (SET VIA SECRET MANAGER IN PROD)
JWT_ACCESS_SECRET=CHANGE_ME
JWT_REFRESH_SECRET=CHANGE_ME
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
SERVICE_JWT_SECRET=CHANGE_ME
DEFAULT_ADMIN_USER_ID=00000000-0000-0000-0000-000000000001

# Session Management
SESSION_SECRET=CHANGE_ME_SESSION_SECRET
SESSION_NAME=metro_session
SESSION_MAX_AGE=86400000
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# API KEY
API_KEY_HASH_SECRET=CHANGE_ME
NEED_API_KEY=true

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD:-}
# Keep trailing colon
REDIS_KEY_PREFIX=${REDIS_KEY_PREFIX:-api-gateway:}

# CORS / Origins
UI_CLIENT=https://app.example.com
UV_DESK_CLIENT=https://helpdesk.example.com
UV_VERCEL_CLIENT=https://metro-system.vercel.app
API_GATEWAY_ORIGIN=https://api.example.com

# Kafka
KAFKA_BROKERS=kafka-1:19092,kafka-2:19093,kafka-3:19094
KAFKA_CLIENT_ID=api-gateway
KAFKA_BROKERS_INTERNAL=kafka-1:19092,kafka-2:19093,kafka-3:19094
KAFKA_GROUP_ID=api-gateway-group
USER_CREATED_TOPIC=user.created
USER_DELETED_TOPIC=user.deleted
PASSENGER_DELETED_TOPIC=passenger.deleted
STAFF_DELETED_TOPIC=staff.deleted
USER_LOGIN_TOPIC=user.login

# Email (configure via secret manager)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM_NAME=Metro System
EMAIL_FROM=noreply@example.com

# OpenTelemetry Tracing Configuration
SERVICE_NAME=api-gateway
SERVICE_VERSION=1.0.0
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
OTEL_TRACES_SAMPLER=traceidratio
OTEL_TRACES_SAMPLER_ARG=1.0

