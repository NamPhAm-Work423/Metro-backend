{
    "gateway": {
        "port": 8000,
        "secure": false,
        "version": "1.0.0",
        "name": "Metro API Gateway"
    },
    "services": [
        {
            "name": "auth-service",
            "endPoint": "auth",
            "instances": [
                {
                    "host": "auth-service",
                    "port": 8001
                }
            ]
        },
        {
            "name": "user-service",
            "endPoint": "user",
            "instances": [
                {
                    "host": "user-service",
                    "port": 8002
                }
            ]
        },
        {
            "name": "transport-service",
            "endPoint": "transport",
            "instances": [
                {
                    "host": "transport-service",
                    "port": 8003
                }
            ]
        },
        {
            "name": "ticket-service",
            "endPoint": "ticket",
            "instances": [
                {
                    "host": "ticket-service",
                    "port": 8004
                }
            ]
        },
        {
            "name": "public-service",
            "endPoint": "public",
            "instances": [
                {
                    "host": "public-service",
                    "port": 8005
                }
            ]
        },
        {
            "name": "payment-service",
            "endPoint": "payment",
            "instances": [
                {
                    "host": "payment-service",
                    "port": 8006
                }
            ]
        },
        {
            "name": "report-service",
            "endPoint": "report",
            "instances": [
                {
                    "host": "report-service",
                    "port": 8007
                }
            ]
        },
        {
            "name": "control-service",
            "endPoint": "control",
            "instances": [
                {
                    "host": "control-service",
                    "port": 8008
                }
            ]
        },
        {
            "name": "notification-service",
            "endPoint": "notification",
            "instances": [
                {
                    "host": "notification-service",
                    "port": 8009
                }
            ]
        }
    ]
}