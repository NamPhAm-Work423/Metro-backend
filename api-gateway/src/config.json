{
    "gateway": {
        "port": 3000,
        "secure": false,
        "version": "1.0.0",
        "name": "Metro API Gateway"
    },
    "services": [
        {
            "name": "user-service",
            "endPoint": "user",
            "instances": [
                {
                    "host": "user-service",
                    "port": 3001
                }
            ]
        },
        {
            "name": "transport-service",
            "endPoint": "transport",
            "instances": [
                {
                    "host": "transport-service",
                    "port": 3002
                }
            ]
        },
        {
            "name": "ticket-service",
            "endPoint": "ticket",
            "instances": [
                {
