# Server Configuration
PORT=3003
NODE_ENV=development

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id
PAYPAL_MODE=sandbox # or live

# Kafka Configuration
KAFKA_BROKERS=localhost:19092
KAFKA_CLIENT_ID=webhook-service
KAFKA_GROUP_ID=webhook-service-group

# Security
WEBHOOK_SECRET=your_webhook_secret_key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# API Gateway
API_GATEWAY_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/webhook-service.log

# Metrics
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB_NAME=webhook_db
MONGODB_USER=webhook_user
MONGODB_PASSWORD=webhook_pass123

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispass123
REDIS_USER=

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_MODE=test # or live

# Additional Webhook Providers (Optional)
STRIPE_CLIENT_ID=your_stripe_client_id
STRIPE_CLIENT_SECRET=your_stripe_client_secret
