# Application
PORT=8005
NODE_ENV=development

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD:-redispass123}
REDIS_KEY_PREFIX=${REDIS_KEY_PREFIX:-service:public-service:}

# gRPC Configuration
TRANSPORT_GRPC_URL=transport-service:50051
TICKET_GRPC_URL=ticket-service:50052

# Scheduler (runs every hour at minute 0)
SCHEDULER_ENABLED=true
SCHEDULER_CRON="0 * * * *"
SCHEDULER_INITIAL_DELAY_MS=10000
